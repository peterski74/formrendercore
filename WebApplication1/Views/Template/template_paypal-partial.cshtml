@model WebApplication1.Models.PayPalAccounts

<div class="form-group" id="item_@Model.PayPalId">
    <label id="label_@Model.PayPalId" class="@ViewBag.labelWidth control-label">
        @if (Model.Mandatory)
        {
            <span title="Mandatory">*</span>
        }
        @Model.Title


    </label>
    <div class="@ViewBag.inputWidth">
        <p>
            @foreach (var element in Model.CartItemElements.OrderBy(x => x.Order))
            {
                @*<div class="radio">
                    <label>*@
                <input type="radio"
                       @(Model.Mandatory ? "Required" : "")
                       name="input_paypal_@Model.PayPalId"
                       id="@element.CartItemElementId"
                       value="@element.CartItemElementId" />
                @element.ItemName @element.Amount<br />
                @*</label>
                    </div>*@
            }
            @{ var title = System.Net.WebUtility.UrlEncode(@Model.Title); }
            <input type="hidden" value="@title" name="label_@Model.PayPalId" />
        </p>
    </div>
    @if (!string.IsNullOrEmpty(Model.Tooltip))
    {
        <span class="help-block">@Model.Tooltip</span>
    }
</div>

